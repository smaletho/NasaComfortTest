@{string foldId = "page_" + ViewBag.Nav_A + "_" + ViewBag.Nav_B + "_" + ViewBag.Nav_C;
}

@if ((bool)ViewBag.IsBookmarked == true)
{
    <img id="@foldId" class="page-fold-image" src="~/Content/page-fold.png" style="position:absolute;top:0;right:2px;width:65px;" />
}
else
{
    <img id="@foldId" class="page-fold-image" src="~/Content/page-fold.png" style="position:absolute;top:0;right:2px;width:65px;display:none;" />
}
<div onclick="togglePageFold('@foldId', this)" class="page-fold-button" style="position:absolute;top:0;right:2px;width:65px;height:65px;z-index:900"></div>


<div style="width: 1418px; height: 710px; display: block; position: absolute; top: 0; left: 0;">
    <div style="margin-top:50px;margin-left:50px">Page @ViewBag.Nav_A, @ViewBag.Nav_B, @ViewBag.Nav_C</div>
</div>

@if ((bool)ViewBag.IsBookmarked == true)
{
    <div id="maximized_notes" style="position:absolute;bottom:10px;right:10px;padding:10px;border: 1px solid;width:500px;height:500px;z-index:500" onclick="ExpandShrinkNotes(false);">
        @ViewBag.BookmarkNotes
    </div>
    <div id="minimized_notes" style="position: absolute; bottom: 10px; right: 10px; padding: 10px; border: 1px solid; width: 75px; height: 50px; z-index: 499; display: none; " onclick="ExpandShrinkNotes(true);">notes</div>
}
