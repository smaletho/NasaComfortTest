    function flashClickableAreas() {
        console.time("flash");

        pulse = true;
        pulseNext();
        setTimeout(function () {
            pulse = false;
            console.timeEnd("flash");
        }, 3000);
    }

    function pulseNext() {
        if (pulse)
            $(".bodyClickableArea").delay(100).fadeOut('slow').delay(50).fadeIn('slow', pulseNext);
        else
            $(".bodyClickableArea").fadeOut();
    }







    function displayIntestine() {
        $(".bodyClickableArea").fadeOut();
